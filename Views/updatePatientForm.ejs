<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Patient</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to right, #035bff 0%, #46a9eb 100%);
            font-family: "Montserrat", sans-serif;
        }

        .container {
            width: 80%;
            max-width: 1000px;
            background: #001742;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            color: #fff;
        }

        .container h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #fff;
        }

        form {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .form-group {
            width: 48%;
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .form-group input[type="radio"] {
            width: auto;
        }

        .form-buttons {
            width: 100%;
            text-align: center;
            margin-top: 20px;
        }

        .form-buttons button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            background: #035bff;
            color: white;
        }

        .form-buttons button:hover {
            background: #0246c1;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Add Patient</h1>
        <form action="http://localhost:8080/api/v1/patient/updatePatientdata/<%=patient._id%>" method="POST">
            <div class="form-group">
                <label for="name">Full Name *</label>
                <input type="text" id="name" name="name" value="<%=patient.name%>" required>
            </div>

            <div class="form-group">
                <label for="gender">Gender:</label>
                <select name="gender" id="gender" value="<%=patient.gender%>" required>
                    <option value="Male" <%= patient.gender === 'Male' ? 'selected' : '' %>>Male</option>
                    <option value="Female" <%= patient.gender === 'Female' ? 'selected' : '' %>>Female</option>
                    <option value="Other" <%= patient.gender === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="age">Age *</label>
                <input type="text" id="age" name="age" value="<%=patient.age%>" required>
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%=patient.address%>">
            </div>

            <div class="form-group">
                <label for="phone">Contact No. *</label>
                <input type="text" id="phone" name="phone" value="<%=patient.phone%>" required>
            </div>

            <div class="form-group">
                <label for="bloodGroup">Blood Group</label>
                <select id="bloodGroup" name="bloodGroup" value="<%=patient.bloodGroup%>">
                    <option value="" disabled selected>Select...</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
            </div>
            <div class="form-group">
                <!-- Assigned Doctor Dropdown -->
                <label for="assignedDoctor">Assigned Doctor:</label>
                <select id="assignedDoctor" name="assignedDoctor" value="<%=patient.assignedDoctor%>" required>
                    <% doctors.forEach(function(doctor) { %>
                        <option value="<%= doctor._id %>" <%= doctor._id.toString() === patient.assignedDoctor.toString() ? 'selected' : '' %>>
                            <%= doctor.name %> - <%= doctor.specialization %>
                        </option>
                    <% }) %>
                </select>
                <br><br>
            </div>

            <h2 style="width: 100%; text-align: center;">*Health Information</h2>

            <div class="form-group">
                <label for="systolicBP">Systolic BP</label>
                <input type="text" id="systolicBP" name="systolicBP" value="<%=patient.systolicBP%>">
            </div>

            <div class="form-group">
                <label for="diastolicBP">Diastolic BP</label>
                <input type="text" id="diastolicBP" name="diastolicBP" value="<%=patient.diastolicBP%>">
            </div>

            <div class="form-group">
                <label for="temperature">Temperature</label>
                <input type="text" id="temperature" name="temperature" value="<%=patient.temperature%>">
            </div>

            <div class="form-group">
                <label for="weight">Weight (kg)</label>
                <input type="text" id="weight" name="weight" value="<%=patient.weight%>">
            </div>

            <div class="form-group">
                <label for="respiratoryRate">Respiratory Rate (min)</label>
                <input type="text" id="respiratoryRate" name="respiratoryRate" value="<%=patient.respiratoryRate%>">
            </div>

            <div class="form-group">
                <label for="heartRate">Heart Rate (BPM)</label>
                <input type="text" id="heartRate" name="heartRate" value="<%=patient.heartRate%>">
            </div>

            <div class="form-group">
                <label for="bmi">BMI (kg/m2)</label>
                <input type="text" id="bmi" name="bmi" value="<%=patient.bmi%>">
            </div>

            <div class="form-group">
                <label for="bloodSugarF">Blood Sugar (F)</label>
                <input type="text" id="bloodSugarF" name="bloodSugarF" value="<%=patient.bloodSugarF%>">
            </div>

            <div class="form-group">
                <label for="bloodSugarR">Blood Sugar (R)</label>
                <input type="text" id="bloodSugarR" name="bloodSugarR" value="<%=patient.bloodSugarR%>">
            </div>

            <div class="form-group">
                <label for="spo2">SPO2</label>
                <input type="text" id="spo2" name="spo2" value="<%=patient.spo2%>">
            </div>

            <div class="form-buttons">
                <button type="submit">Add Patient</button>
            </div>
        </form>
    </div>
</body>

</html>