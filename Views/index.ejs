<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Doctors - Medical Clinic</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f4f4f4;
        }
        a {
            color: inherit;
            text-decoration: none;
        }

        header {
            background-color: #333;
            padding: 15px 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        nav {
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: space-between;

        }

        nav .logo h1 {
            color: white;
            margin: 0;
            display: inline-block;
        }

        nav .nav-links {
            list-style: none;
            padding: 0;
            float: right;
        }

        nav .nav-links li {
            display: inline-block;
            margin-left: 20px;
        }

        nav .nav-links a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            padding: 10px 15px;
            transition: background-color 0.3s;
        }

        nav .nav-links a:hover {
            background-color: #555;
        }

        /* Our Doctors Section */
        .doctors {
            background-color: #fff;
            padding: 150px 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        h2 {
            text-align: center;
            font-size: 36px;
            margin-bottom: 40px;
        }

        .doctor-cards {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 20px;
            padding: 0 20px;
        }

        .doctor-card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
            padding: 20px;
            transition: transform 0.3s ease-in-out;
            margin-bottom: 30px;
        }

        .doctor-card:hover {
            transform: translateY(-10px);
        }

        .doctor-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .doctor-info {
            margin-top: 15px;
        }

        h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        p {
            font-size: 16px;
            margin: 5px 0;
        }
        table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }

    th, td {
      border: 1px solid #ddd;
      text-align: left;
      padding: 8px;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    .delete-icon {
      color: #ff4d4d;
      cursor: pointer;
    }

    .delete-icon:hover {
      color: #d63333;
    }
        footer {
            background-color: #333;
            color: white;
            padding: 20px;
            text-align: center;
            margin-top: 50px;
        }

        footer p {
            margin: 5px 0;
        }
       
    </style>
</head>

<body>

    <!-- Navbar -->
    <header>
        <nav>
            <div class="logo">
                <h1>Clinic</h1>
            </div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#services">Services</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#doctors">Our Doctors</a></li>
            </ul>
        </nav>
    </header>

    <!-- Our Doctors Section -->
    

    <section id="doctors" class="doctors">
        <div class="container">
            <h2>Our Doctors</h2>
            <div class="doctor-cards">
                <table>
                    <thead>
                        <tr>
                          <th>S.No</th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>DOB</th>
                          <th>Gender</th>
                          <th>Designation</th>
                          <th>Degree</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% doctors.forEach((doctor, index) => { %>
                        <tr>
                          <td><%= index + 1 %></td> <!-- Automatic S.No -->
                          <td><%= doctor.name %></td>
                          <td><%= doctor.email %></td>
                          <td><%= doctor.phone %></td>
                          <td><%= doctor.dateOfBirth %></td>
                          <td><%= doctor.gender %></td>
                          <td><%= doctor.designation %></td>
                          <td><%= doctor.degree %></td>
                          <td><a href="http://localhost:8080/api/v1/doctor/deleteDoctor/<%=doctor._id%>"><span class="delete-icon">üóëÔ∏è</span></a><a href="http://localhost:8080/api/v1/doctor/update/<%=doctor._id%>"><span class="delete-icon"><i class="fa-solid fa-pen"></i></span></a></td>

                        </tr>
                        <% }) %>
                      </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <p>&copy; 2025 Medical Clinic | All rights reserved.</p>
            <p>Phone: (123) 456-7890 | Email: info@medicalclinic.com</p>
        </div>
    </footer>
   
</body>

</html>

